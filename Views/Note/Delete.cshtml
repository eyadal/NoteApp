@model Note

<form method="post" asp-action="DeletePost">
    <input  asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h1 class="text-primary">
                Delete Gym Program
            </h1>
        </div>
        @*// Validation Summary*@
        <div asp-validation-summary="All"></div>
        <div class=" mb-3 list-group-item list-group-item-action">
            <label asp-for="NoteTitle"></label>
            <input asp-for="NoteTitle" disabled class="form-control" />
        </div>
        <div class=" mb-3 list-group-item list-group-item-action">
            <label asp-for="NoteText"></label>
            <input asp-for="NoteText" disabled class="form-control" />
        </div>
        <div class=" mb-3 list-group-item list-group-item-action">
            <label asp-for="Day"></label>
            <input asp-for="Day" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Note" asp-action="NoteView" class="btn btn-info" style="width:150px">
            Back to Program
        </a>
    </div>
</form>
@*// Client Side Validation*@
@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />

    }
}