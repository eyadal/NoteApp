@model Category

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h1 class="text-primary">
                Edit Group Workout
            </h1>
        </div>
        @*// Validation Summary*@
        <div asp-validation-summary="All"></div>
        <div class=" mb-3 list-group-item list-group-item-action">
            <label asp-for="Workout"></label>
            <input type="text" asp-for="Workout" class="form-control" />
            <span asp-validation-for="Workout" class="text-danger"></span>
        </div>
        <div class=" mb-3 list-group-item list-group-item-action">
            <label asp-for="Participant"></label>
            <input type="number" asp-for="Participant" class="form-control" />
            <span asp-validation-for="Participant" class="text-danger"></span>

        </div>
        <div class=" mb-3 list-group-item list-group-item-action">
            <label asp-for="CreatedDateTime"></label>
            <input asp-for="CreatedDateTime" class="form-control" />
            <span asp-validation-for="CreatedDateTime" class="text-danger"></span>

        </div>
        <button type="submit" class="btn btn-success" style="width:150px">
            <i class="bi bi-check-circle-fill"></i> Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-info" style="width:150px">
            Back to Workouts
        </a>
    </div>
</form>
@*// Client Side Validation*@
@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />

    }
}
