@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="WorkoutHead">
    <h3>Whether you want to get stronger,</h3>
    <h4>faster or maybe more agile,</h4>
    <h5>there is a workout for you.</h5>
</div>
    
<div class="container p-3" >
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Group Workouts</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"> 
               <i class="bi bi-plus-square"></i> &nbsp; Create New Workout
                </a>
        </div>  

    </div>
    <br/><br/>


    <table class="table table-info">
        <thead>
            <tr class="table-success">
                <th>
                    Workouts
                </th>
                <th>
                     Participants
                </th>
                <th>
                     Date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr class="table-info">
                    <td width="30%">
                        @obj.Workout
                    </td>
                    <td width="30%">
                        @obj.Participant
                    </td>
                    <td width="10%">
                        @obj.CreatedDateTime
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>